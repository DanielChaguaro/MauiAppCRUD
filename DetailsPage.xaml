<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCRUD.DetailsPage"
             Title="DetailsPage">
    <VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection Title="Ingrese los datos para un nuevo producto">
                    <EntryCell x:Name="Nombre"
                           Placeholder="producto.Nombre" />
                    
                    <EntryCell x:Name="Cantidad"
                           Placeholder="Cantidad"
                           Keyboard="Numeric"/>
                    <EntryCell x:Name="Descripcion"
                           Placeholder="Descripcion"
                               />

                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Regresar Producto"
            Clicked="OnClickRegresarProducto"/>
    </VerticalStackLayout>
</ContentPage>